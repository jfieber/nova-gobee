{
  "identifier": "tech.staysail.GoBy",
  "name": "Go-By",
  "organization": "Staysail Systems",
  "description": "Go support",
  "version": "0.0.1",
  "categories": [
    "commands",
    "languages",
    "formatters",
    "completions",
    "issues",
    "sidebars"
  ],
  "license": "MIT",
  "repository": "https://github.com/staysail/nova-goby",
  "bugs": "https://github.com/staysail/nova-goby/issues",
  "funding": "https://github.com/sponsors/gdamore",
  "min_runtime": "10.0",

  "main": "main.js",

  "entitlements": {
    "process": true,
    "filesystem": "readwrite",
    "requests": true
  },

  "commands": {
    "editor": [
      {
        "title": "Jump To Definition",
        "command": "goby.jumpToDefinition",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      {
        "title": "Jump To Declaration",
        "command": "goby.jumpToDeclaration",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      {
        "title": "Jump To Type Definition",
        "command": "goby.jumpToTypeDefinition",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      {
        "title": "Jump To Implementation",
        "command": "goby.jumpToImplementation",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      { "separator": true },
      {
        "title": "Find References",
        "command": "goby.findReferences",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      {
        "title": "Find Symbol",
        "command": "goby.findSymbols",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      { "separator": true },
      {
        "title": "Format File",
        "command": "goby.formatFile",
        "shortcut": "opt-shift-f",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      {
        "title": "Format Selection",
        "command": "go.formatSelection",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      {
        "title": "Rename Symbol",
        "command": "goby.renameSymbol",
        "filters": {
          "syntaxes": ["go"]
        }
      },
      { "separator": true },
      {
        "title": "Preferences",
        "command": "goby.preferences",
        "syntaxes": ["go"]
      },
      {
        "title": "Extension Preferences",
        "command": "goby.extensionPreferences",
        "syntaxes": ["go"]
      }
    ],
    "extensions": [
      {
        "title": "Extension Preferences",
        "command": "goby.extensionPreferences"
      },
      {
        "title": "Check for Updates",
        "command": "goby.checkForUpdate"
      },
      {
        "title": "Restart Server",
        "command": "goby.restartServer",
        "syntaxes": ["go"]
      }
    ]
  },

  "config": [
    {
      "title": "Language Server",
      "type": "section",
      "children": [
        {
          "key": "goby.lsp.flavor",
          "title": "Language server to use",
          "description": "Which language server to use",
          "type": "enum",
          "values": [
            ["auto", "Automatic gopls"],
            ["custom", "Custom server"],
            ["none", "None"]
          ],
          "radio": false,
          "default": "auto"
        },
        {
          "key": "goby.checkForUpdates",
          "title": "Check for Updates at Start",
          "description": "When starting up, should we check to see if a new update of gopls is available?",
          "type": "boolean",
          "default": true
        },
        {
          "key": "goby.lsp.path",
          "title": "Language server Path",
          "description": "Path to a custom language server",
          "type": "path",
          "placeholder": "/usr/local/bin/gopls"
        }
      ]
    },
    {
      "title": "Formatting",
      "type": "section",
      "children": [
        {
          "key": "goby.format.onSave",
          "title": "Format on save",
          "description": "Format Go files automatically when saving.",
          "type": "boolean",
          "default": false
        }
      ]
    }
  ],

  "configWorkspace": [
    {
      "key": "goby.format.onSave",
      "title": "Format on save",
      "description": "Format Go files automatically when saving.",
      "type": "enum",
      "values": [
        [null, "Inherit from Global Settings"],
        [false, "Disable"],
        [true, "Enable"]
      ],
      "default": null
    }
  ],

  "sidebars": [
    {
      "id": "goby.sidebar",
      "name": "Go-By",
      "smallImage": "sbsmall",
      "largeImage": "sblarge",
      "sections": [
        {
          "id": "goby.sidebar.references",
          "name": "References",
          "placeholderText": "Results from \"Find References\" appear here.",
          "placeholderImage": "sblarge",
          "headerCommands": [
            {
              "title": "Find References",
              "command": "goby.findReferences",
              "tooltip": "Find references to the selected symbol",
              "image": "search"
            }
          ]
        },
        {
          "id": "goby.sidebar.symbols",
          "name": "Symbols",
          "placeholderText": "Results from \"Find Symbols\" appear here.",
          "placeholderImage": "sblarge",
          "headerCommands": [
            {
              "title": "Find Symbol",
              "command": "goby.findSymbols",
              "tooltip": "Open the Find Symbol dialog",
              "image": "search"
            }
          ]
        }
      ]
    }
  ],

  "activationEvents": ["onLanguage:go"]
}
